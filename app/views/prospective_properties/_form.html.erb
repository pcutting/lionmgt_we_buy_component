<%= nested_form_for @user, :url => multiple_properties_prospective_properties_path do |f| %>
  <div class="field_row">
    <div class="field_cell long">
      Address
    </div>
    <div class="field_cell">
      City
    </div>
    <div class="field_cell short">
      State
    </div>
    <div class="field_cell">
      Zip
    </div>
    <div class="field_cell long">
      Style
    </div>
    <div class="field_cell">
      Beds
    </div>
    <div class="field_cell">
      Baths
    </div>
    <div class="field_cell">
      Price
    </div>
    <div class="field_cell">
      SQ Ft
    </div>
    <div class="field_cell">
      Year Built
    </div>
    <div class="field_cell">
      Rent
    </div>
    
    <div class="field_cell">
      Rate
    </div>
    <div class="field_cell">
      Source
    </div>
    <div class="field_cell">
      Taxes
    </div>
    <div class="field_cell">
      Contact
    </div>
    <div class="field_cell">
      ARV
    </div>
    <div class="field_cell">
      Max Bix
    </div>
    <div class="field_cell">
      Repair cost
    </div>
    <div class="field_cell long">
      Comment
    </div>
  </div>
    
  <div class="clear"></div>
  
  
  <%= f.fields_for :prospective_properties do |prop| %>
    <div class="field_row">
      <div class="field_cell long">
        <%= prop.text_field :address %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :city %>
      </div>
      <div class="field_cell short">
        <%= prop.text_field :state %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :zip %>
      </div>
      <div class="field_cell long">
        <%= prop.select :style, ["Single Family", "Double", "Duplex", "Triplex","4Plex", 5,6,7,8,9,10,"11-15","16-25","26-50","51-150", "151-300", "301+", "Condo"]  %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :bedrooms %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :bathrooms %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :price %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :squareft %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :year_built  %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :rentometer %>
      </div>
      
      <div class="field_cell">
        <%= prop.select :interest, [["1 Low",1],[2,2],[3,3],[4,4],["5-High",5]].map {|x| [x.first, x.last]} %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :source,:size=>6 %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :taxes %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :contact %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :arv %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :max_bid %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :repair_estimate  %>
      </div>
      <div class="field_cell">
        <%= prop.text_field :comment %>
      </div>
      <div>
        <%= prop.link_to_remove "Remove" %>
      </div>
    </div>
  <% end %>

  <div class="cear"></div>
  
  <div class="clear">
    <%= f.link_to_add "+ Add an Property", :prospective_properties, :class => "button clear" %>
  </div>  
  <%= f.submit %>
<% end %>






