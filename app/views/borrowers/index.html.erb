    <th></th>
  </tr>

<% @borrowers.each do |borrower| %>
  <tr>
    <td><%= borrower.first_name %></td>
    <td><%= borrower.last_name %></td>
    <td><%= borrower.email %></td>
    <td><%= borrower.cell_phone %></td>
    <td><%= borrower.home_phone %></td>
    <td><%= borrower.address %></td>
    <td><%= borrower.address2 %></td>
    <td><%= borrower.city %></td>
    <td><%= borrower.state %></td>
    <td><%= borrower.zip %></td>
    <td><%= borrower.market_value %></td>
    <td><%= borrower.property_address %></td>
    <td><%= borrower.bedrooms %></td>
    <td><%= borrower.baths %></td>
    <td><%= borrower.current_market_value %></td>
    <td><%= borrower.liens_against_property %></td>
    <td><%= borrower.description %></td>
    <td><%= borrower.under_contract %></td>
    <td><%= borrower.referral %></td>
    <td><%= borrower.closing_date %></td>
    <td><%= borrower.repairs_needed %></td>
    <td><%= borrower.purchase_price %></td>
    <td><%= borrower.exit_strategy %></td>
    <td><%= borrower.loan_type_requesting %></td>
    <td><%= borrower.gross_monthly_income %></td>
    <td><%= borrower.loan_amount_requested %></td>
    <td><%= borrower.length_of_term_anticipated %></td>
    <td><%= borrower.property_info %></td>
    <td><%= borrower.loan_summary_overview %></td>
    <td><%= borrower.comment %></td>
    <td><%= link_to 'Show', borrower %></td>
    <td><%= link_to 'Edit', edit_borrower_path(borrower) %></td>
    <td><%= link_to 'Destroy', borrower, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

