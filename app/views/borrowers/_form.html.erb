<%= form_for(@borrower) do |f| %>
  <div class="row1">
    <h1>Application</h1>
  </div>
  <% if @borrower.errors.any? %>
    <div id="error_explanation" class="row2">
      <h2><%= pluralize(@borrower.errors.count, "error") %> prohibited this borrower from being saved:</h2>

      <ul>
      <% @borrower.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row2">
    <fieldset>
      <legend>Borrower Information</legend>
      <div class="row">
        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, :size => 8 %>
        </div>
        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, :size => 8 %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email, :size => 8 %>
        </div>
        <div class="field">
          <%= f.label :cell_phone %><br />
          <%= f.text_field :cell_phone, :size => 8 %>
        </div>
        <div class="field">
          <%= f.label :home_phone %><br />
          <%= f.text_field :home_phone, :size => 8 %>
        </div>
      </div>
      
      <div class="row">
        <fieldset class="skinny">
          <legend>Address:</legend>
          
          <div class="field row">
            <%= f.label :address %><br />
            <%= f.text_field :address %>
          </div>
          <div class="field row">
            <%= f.label :address2 %><br />
            <%= f.text_field :address2 %>
          </div>
          <div class="row">
            <div class="field">
              <%= f.label :city %><br />
              <%= f.text_field :city, :size => 8 %>
            </div>
            <div class="field">
              <%= f.label :state %><br />
              <%= f.text_field :state,:size => 4 %>
            </div>
            <div class="field">
              <%= f.label :zip %><br />
              <%= f.text_field :zip,:size => 5 %>
            </div>
          </div>
        </fieldset>
      </div>
    </fieldset>
    <fieldset>
      <legend>Property Details:</legend>
      <div class = "row">
        <div class="field">
          <%= f.label :under_contract %><br />
          <%= f.check_box :under_contract %>
        </div>
        <div class="field">
          <%= f.label :closing_date %><br />
          <%= f.datetime_select :closing_date %>
        </div>
      </div>
      <div class="field">
        <%= f.label :property_address %><br />
        <%= f.text_area :property_address %>
      </div>

      <div class="row">
        <div class="field">
          <%= f.label :bedrooms %><br />
          <%= f.number_field :bedrooms, :size => 10 %>
        </div>
        <div class="field">
          <%= f.label :baths %><br />
          <%= f.text_field :baths, :size => 10 %>
        </div>

      </div>
      <div class="row">
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </div>
      </div>
      <div class = "row">
        
        <div class="field">
          <%= f.label :purchase_price %><br />
          <%= f.text_field :purchase_price %>
        </div>
        <div class="field">
          <%= f.label :repairs_needed %><br />
          <%= f.text_field :repairs_needed %>
        </div>
          <div class="field">
          <%= f.label :current_market_value %><br />
          <%= f.text_field :current_market_value %>
        </div>

        <div class="field">
          <%= f.label :liens_against_property %><br />
          <%= f.text_field :liens_against_property %>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend>Loan Information</legend>
      <div class="row">
        <div class="field">
          <%= f.label :loan_type_requesting %><br />
          <%= f.text_field :loan_type_requesting %>
        </div>
        <div class="field">
          <%= f.label :gross_monthly_income, "Gross Monthly Income from Rent" %><br />
          <%= f.text_field :gross_monthly_income %>
        </div>
        <div class="field">
          <%= f.label :loan_amount_requested %><br />
          <%= f.text_field :loan_amount_requested %>
        </div>
        <div class="field">
          <%= f.label :length_of_term_anticipated %><br />
          <%= f.text_field :length_of_term_anticipated %>
        </div>
    
        <div class="field">
          <%= f.label :loan_summary_overview %><br />
          <%= f.text_area :loan_summary_overview %>
        </div>
        <div class="field">
          <%= f.label :comment %><br />
          <%= f.text_area :comment %>
        </div>
        <div class="field">
          <%= f.label :referral, "Referred By/From" %><br />
          <%= f.text_field :referral %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="row3">
    <div class="actions">
      <%= f.submit "Submit Loan Request" %>
    </div>
  </div>
<% end %>
