<div class="row1">
  Fill Out Lender Survey:
</div>
<%= form_for(@lender) do |f| %>
  <% if @lender.errors.any? %>
    <div class="row2">
      <div id="error_explanation">
        <h2><%= pluralize(@lender.errors.count, "error") %> prohibited this lender from being saved:</h2>

        <ul>
        <% @lender.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row2">
    <div class="row">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>
      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </div>
    </div>
    <div class="sentances">
      <div class="field">
        <%= f.label :lent_before_on_property, "Have you ever lent on property before?" %>
        <%= f.check_box :lent_before_on_property %>
        <%# = f.radio_button :lent_before_on_property, "true"  %>
        <%# = f.radio_button :lent_before_on_property, "false" %>
      </div>
      <div class="field">
        <%= f.label :how_much_can_you_lend, "How much can you lend?" %>
        <%= f.text_field :how_much_can_you_lend,  :size => 10 %>
      </div>
      <div class="field">
        <%= f.label :what_geographical_area_of_interest, "What geographical area are you looking to lend in?" %>
        <%= f.text_field :what_geographical_area_of_interest, :size => 10 %>
      </div>
      <div class="field">
        <%= f.label :how_fast_can_you_move_funds, "How fast can you liquidate the funds you want to lend?" %>
        <%= f.text_field :how_fast_can_you_move_funds, :size => 10 %>
      </div>
    </div>
  </div>
  <div class="row3">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
